# =============================================================================
# MIDAS DASHBOARD - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# META (FACEBOOK) ADS API - MULTI-ACCOUNT SUPPORT
# =============================================================================

# Your Meta API Access Token (System User Token recommended for production)
# Get this from: Meta Business Suite > Settings > Access Tokens
META_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxx

# Single Ad Account (legacy support)
# Format: act_XXXXXXXXXX
META_AD_ACCOUNT_ID=act_123456789

# Multiple Ad Accounts (comma-separated)
# Format: act_111111,act_222222,act_333333
META_AD_ACCOUNTS=act_123456789,act_987654321,act_555555555

# Account Name Mapping (optional, JSON format)
# Maps account IDs to friendly names for display
META_ACCOUNT_NAMES={"act_123456789": "Client A - Main Account", "act_987654321": "Client B - E-commerce", "act_555555555": "Client C - Lead Gen"}

# Enable live API data (set to true when credentials are configured)
# When false, the dashboard uses mock/demo data
USE_LIVE_META_DATA=false

# =============================================================================
# GOOGLE ADS API (Optional - Not yet implemented)
# =============================================================================

# GOOGLE_DEVELOPER_TOKEN=
# GOOGLE_CLIENT_ID=
