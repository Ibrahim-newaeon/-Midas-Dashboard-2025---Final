# =============================================================================
# META (FACEBOOK) ADS API - MULTI-ACCOUNT SUPPORT
# =============================================================================

# Your Meta API Access Token (System User Token recommended for production)
# Get this from: Meta Business Suite > Settings > Access Tokens
META_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxx

# Single Ad Account (legacy support)
# Format: act_XXXXXXXXXX
META_AD_ACCOUNT_ID=act_123456789

# Multiple Ad Accounts (comma-separated)
# Format: act_XXXXXXXXXX,act_XXXXXXXXXX
META_AD_ACCOUNTS=act_416255850603836,act_3414670198642836,act_257638052142479,act_489339008679770,act_2592251594327632,act_179043333183075,act_219729065690704,act_435816620682608

# Account Name Mapping
META_ACCOUNT_NAMES={"act_416255850603836": "Midas - Boosting", "act_3414670198642836": "Midas Campaigns - All", "act_257638052142479": "New Account - Generic", "act_489339008679770": "Midas Saudi Arabia Campaigns - 2023", "act_2592251594327632": "Midas Kuwait Campaigns - 2023", "act_179043333183075": "Midas Qatar Campaigns - 2023", "act_219729065690704": "Midas Saudi Arabia Campaigns 2 - 2023", "act_435816620682608": "Midas Campaigns - E-Commerce"}

# Enable live API data (set to true when credentials are configured)
# When false, the dashboard uses mock/demo data
USE_LIVE_META_DATA=false

